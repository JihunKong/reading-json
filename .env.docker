# 한국어 학습 시스템 Docker 환경 설정

# 애플리케이션 설정
FLASK_ENV=production
SECRET_KEY=korean-learning-secret-key-change-in-production
DEBUG=false

# 한국어 언어 설정
LANG=ko_KR.UTF-8
LANGUAGE=ko_KR:ko
LC_ALL=ko_KR.UTF-8
PYTHONIOENCODING=utf-8

# 데이터베이스 설정
DATABASE_URL=sqlite:///data/korean_learning.db
SQLITE_DATABASE_PATH=/app/data/korean_learning.db

# Redis 캐시 설정
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# 서버 설정
HOST=0.0.0.0
PORT=8080
WORKERS=4

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=/app/logs/korean_learning.log

# 한국어 NLP 설정
KONLPY_JAVA_OPTIONS=-Xmx1g
NLTK_DATA=/app/nltk_data

# 보안 설정
SECURE_COOKIE=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# 성능 설정
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/data/uploads

# 교육 설정
MAX_STUDENTS_PER_CLASS=50
SESSION_TIMEOUT=3600  # 1시간
AUTO_SAVE_INTERVAL=60  # 60초

# 외부 서비스 (선택적)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here